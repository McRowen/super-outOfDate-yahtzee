<Window x:Class="YatzyGrupp2.View.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YatzyGrupp2.View"
        mc:Ignorable="d"
        Title="GameView" Height="600" Width="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Label Content="Spelare" Grid.Row="0" Grid.Column="0" Background="LightCyan"/>
        <Label Grid.Row="0" Grid.Column="1" Background="LightCyan"/>
        <Label Grid.Row="0" Grid.Column="2" Background="LightCyan"/>
        <Label Grid.Row="0" Grid.Column="3" Background="LightCyan"/>
        <Label Grid.Row="0" Grid.Column="4" Background="LightCyan"/>

        <Label Content="Ettor" Grid.Row="1" Grid.Column="0"/>
        <Label Content="Tvåor" Grid.Row="2" Grid.Column="0"/>
        <Label Content="Treor" Grid.Row="3" Grid.Column="0"/>
        <Label Content="Fyror" Grid.Row="4" Grid.Column="0"/>
        <Label Content="Femmor" Grid.Row="5" Grid.Column="0"/>
        <Label Content="Sexor" Grid.Row="6" Grid.Column="0"/>
        
        <Label Content="Summa" Grid.Row="7" Grid.Column="0" Background="LightCyan"/>
        <Label Grid.Row="7" Grid.Column="1" Background="LightCyan"/>
        <Label Grid.Row="7" Grid.Column="2" Background="LightCyan"/>
        <Label Grid.Row="7" Grid.Column="3" Background="LightCyan"/>
        <Label Grid.Row="7" Grid.Column="4" Background="LightCyan"/>

        <Label Content="Bonus" Grid.Row="8" Grid.Column="0" Background="LightCyan"/>
        <Label Grid.Row="8" Grid.Column="1" Background="LightCyan"/>
        <Label Grid.Row="8" Grid.Column="2" Background="LightCyan"/>
        <Label Grid.Row="8" Grid.Column="3" Background="LightCyan"/>
        <Label Grid.Row="8" Grid.Column="4" Background="LightCyan"/>

        <Label Content="Par" Grid.Row="9" Grid.Column="0"/>
        <Label Content="Två Par" Grid.Row="10" Grid.Column="0"/>
        <Label Content="Tretal" Grid.Row="11" Grid.Column="0"/>
        <Label Content="Fyrtal" Grid.Row="12" Grid.Column="0"/>
        <Label Content="Liten Stege" Grid.Row="13" Grid.Column="0"/>
        <Label Content="Stor Stege" Grid.Row="14" Grid.Column="0"/>
        <Label Content="Kåk" Grid.Row="15" Grid.Column="0"/>
        <Label Content="Chans" Grid.Row="16" Grid.Column="0"/>
        <Label Content="Yatzy" Grid.Row="17" Grid.Column="0"/>
        
        <Label Content="Total" Grid.Row="18" Grid.Column="0" Background="LightCyan"/>
        <Label Grid.Row="18" Grid.Column="1" Background="LightCyan"/>
        <Label Grid.Row="18" Grid.Column="2" Background="LightCyan"/>
        <Label Grid.Row="18" Grid.Column="3" Background="LightCyan"/>
        <Label Grid.Row="18" Grid.Column="4" Background="LightCyan"/>

    </Grid>
</Window>
